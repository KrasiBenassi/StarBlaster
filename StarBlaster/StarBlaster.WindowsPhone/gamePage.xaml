<Page
    x:Class="StarBlaster.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StarBlaster"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="LayoutRoot">
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/background.png"/>
        </Grid.Background>
        <TextBlock x:Name="scoreTextBlock" Text="99" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="90"/>
        <TextBlock x:Name="timeTextBlock" Text="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="90"/>

        <Canvas x:Name="canvasArea" HorizontalAlignment="Left" Height="532" VerticalAlignment="Top" Width="400">
            <TextBlock x:Name="statusTextBlock" Text="Tap to began" RenderTransformOrigin="2.744,18.902" Canvas.Left="61" Canvas.Top="249" FontSize="45"/>
            <Button x:Name="tapAreaButton" Click="TapAreaButton_Click" Canvas.Left="121" Canvas.Top="317"/>
        </Canvas>

    </Grid>
</Page>
